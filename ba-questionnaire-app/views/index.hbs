      --cs-success: #06d6a0;
      --cs-gradient-dark: linear-gradient(135deg, #0a1628 0%, #1b263b 50%, #0d1b2a 100%);
      --cs-gradient-primary: linear-gradient(135deg, #0077b6 0%, #00a8e8 100%);
    }
    
    body {
      font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
      background: #ffffff;
    }
    
    /* Header */
    .site-header {
      background: var(--cs-gradient-dark);
      padding: 1rem 0;
    }
    
    .navbar-brand {
      color: #ffffff !important;
      font-weight: 700;
      font-size: 1.25rem;
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }
    
    .navbar-brand i {
      color: var(--cs-accent);
      font-size: 1.5rem;
    }
    
    .nav-link {
      color: rgba(255,255,255,0.8) !important;
      font-weight: 500;
    }
    
    .nav-link:hover {
      color: #ffffff !important;
    }
    
    /* Hero Section */
    .hero-section {
      background: var(--cs-gradient-dark);
      padding: 6rem 0;
      text-align: center;
      position: relative;
      overflow: hidden;
    }
    
    .hero-section::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: radial-gradient(circle at 30% 70%, rgba(0,168,232,0.1) 0%, transparent 50%),
                  radial-gradient(circle at 70% 30%, rgba(0,119,182,0.1) 0%, transparent 50%);
    }
    
    .hero-content {
      position: relative;
      z-index: 1;
    }
    
    .hero-section h1 {
      color: #ffffff;
      font-size: 3rem;
      font-weight: 700;
      margin-bottom: 1.5rem;
      line-height: 1.2;
    }
    
    .hero-section h1 span {
      background: var(--cs-gradient-primary);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }
    
    .hero-section .lead {
      color: rgba(255,255,255,0.8);
      font-size: 1.25rem;
      max-width: 700px;
      margin: 0 auto 2rem;
    }
    
    .btn-hero {
      background: var(--cs-gradient-primary);
      border: none;
      color: #ffffff;
      padding: 1rem 2rem;
      font-weight: 600;
      font-size: 1.1rem;
      border-radius: 10px;
      transition: all 0.3s ease;
    }
    
    .btn-hero:hover {
      transform: translateY(-3px);
      box-shadow: 0 10px 30px rgba(0,168,232,0.3);
      color: #ffffff;
    }
    
    .btn-hero-outline {
      background: transparent;
      border: 2px solid rgba(255,255,255,0.3);
      color: #ffffff;
      padding: 1rem 2rem;
      font-weight: 600;
      font-size: 1.1rem;
      border-radius: 10px;
      transition: all 0.3s ease;
    }
    
    .btn-hero-outline:hover {
      background: rgba(255,255,255,0.1);
      border-color: rgba(255,255,255,0.5);
      color: #ffffff;
    }
    
    /* Access Code Section */
    .access-section {
      padding: 5rem 0;
      background: #f8fafc;
    }
    
    .access-card {
      background: #ffffff;
      border-radius: 20px;
      padding: 3rem;
      box-shadow: 0 10px 40px rgba(0,0,0,0.08);
      max-width: 500px;
      margin: 0 auto;
    }
    
    .access-card h2 {
      font-size: 1.75rem;
      font-weight: 700;
      margin-bottom: 0.5rem;
      color: var(--cs-dark);
    }
    
    .access-card p {
      color: var(--cs-gray);
      margin-bottom: 2rem;
    }
    
    .access-input {
      display: flex;
      gap: 1rem;
    }
    
    .access-input input {
      flex: 1;
      border: 2px solid #e2e8f0;
      border-radius: 10px;
      padding: 1rem 1.25rem;
      font-size: 1.1rem;
      text-transform: uppercase;
      letter-spacing: 2px;
      text-align: center;
      font-weight: 600;
    }
    
    .access-input input:focus {
      outline: none;
      border-color: var(--cs-accent);
      box-shadow: 0 0 0 4px rgba(0,168,232,0.15);
    }
    
    .access-input button {
      background: var(--cs-gradient-primary);
      border: none;
      border-radius: 10px;
      padding: 1rem 1.5rem;
      color: #ffffff;
      font-weight: 600;
    }
    
    /* Features Section */
    .features-section {
      padding: 5rem 0;
    }
    
    .section-title {
      text-align: center;
      margin-bottom: 3rem;
    }
    
    .section-title h2 {
      font-size: 2rem;
      font-weight: 700;
      color: var(--cs-dark);
      margin-bottom: 1rem;
    }
    
    .section-title p {
      color: var(--cs-gray);
      font-size: 1.1rem;
    }
    
    .feature-card {
      background: #ffffff;
      border-radius: 16px;
      padding: 2rem;
      height: 100%;
      border: 1px solid #e2e8f0;
      transition: all 0.3s ease;
    }
    
    .feature-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 15px 40px rgba(0,0,0,0.1);
      border-color: var(--cs-accent);
    }
    
    .feature-icon {
      width: 56px;
      height: 56px;
      background: rgba(0,168,232,0.1);
      border-radius: 12px;
      display: flex;
      align-items: center;
      justify-content: center;
      margin-bottom: 1.25rem;
    }
    
    .feature-icon i {
      font-size: 1.5rem;
      color: var(--cs-primary);
    }
    
    .feature-card h5 {
      font-weight: 600;
      color: var(--cs-dark);
      margin-bottom: 0.75rem;
    }
    
    .feature-card p {
      color: var(--cs-gray);
      margin: 0;
      font-size: 0.95rem;
    }
    
    /* Templates Section */
    .templates-section {
      padding: 5rem 0;
      background: var(--cs-gradient-dark);
    }
    
    .templates-section .section-title h2 {
      color: #ffffff;
    }
    
    .templates-section .section-title p {
      color: rgba(255,255,255,0.7);
    }
    
    .template-badge {
      display: inline-block;
      background: rgba(0,168,232,0.15);
      color: var(--cs-accent);
      padding: 0.5rem 1rem;
      border-radius: 20px;
      font-size: 0.875rem;
      font-weight: 500;
      margin: 0.25rem;
    }
    
    /* Footer */
    .site-footer {
      background: var(--cs-dark);
      color: rgba(255,255,255,0.7);
      padding: 3rem 0 2rem;
    }
    
    .site-footer h5 {
      color: #ffffff;
      font-weight: 600;
      margin-bottom: 1rem;
    }
    
    .site-footer a {
      color: rgba(255,255,255,0.7);
      text-decoration: none;
      transition: color 0.2s ease;
    }
    
    .site-footer a:hover {
