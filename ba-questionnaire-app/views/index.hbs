<!-- Access Code Section -->
<section id="access" class="section section-alt">
  <div class="container">
    <div style="max-width: 480px; margin: 0 auto;">
      <div class="card" style="padding: var(--space-8);">
        <div style="text-align: center; margin-bottom: var(--space-6);">
          <div style="width: 48px; height: 48px; background: var(--indigo-100); border-radius: var(--radius-lg); display: inline-flex; align-items: center; justify-content: center; margin-bottom: var(--space-4);">
            <i class="bi bi-key" style="font-size: 1.25rem; color: var(--indigo-600);"></i>
          </div>
          <h3 style="margin-bottom: var(--space-2);">Have an Access Code?</h3>
          <p class="text-muted" style="margin: 0;">Enter your 8-character code to access your questionnaire</p>
        </div>
        
        <form action="/access" method="GET">
          <div class="d-flex gap-3">
            <input type="text" name="code" class="form-control form-control-lg" placeholder="ABCD1234" maxlength="8" pattern="[A-Za-z0-9]{8}" required style="text-transform: uppercase; letter-spacing: 2px; text-align: center; font-weight: 600;">
            <button type="submit" class="btn btn-primary btn-lg" style="padding-left: var(--space-5); padding-right: var(--space-5);">
              <i class="bi bi-arrow-right"></i>
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>

