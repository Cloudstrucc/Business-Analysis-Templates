<div class="container py-4">
  <div class="d-flex align-items-center mb-4">
    <a href="/admin/submissions" class="btn btn-outline-secondary me-3">
      <i class="bi bi-arrow-left"></i>
    </a>
    <div class="flex-grow-1">
      <h1 class="h3 mb-0">Submission Details</h1>
      <p class="text-muted mb-0">{{form.title}} - {{invite.client_name}}</p>
    </div>
    {{#eq submission.status "submitted"}}
      <a href="/admin/submissions/{{submission.id}}/export" class="btn btn-outline-primary">
        <i class="bi bi-file-earmark-pdf me-1"></i>Export PDF
      </a>
    {{/eq}}
  </div>
  
  <div class="row">
    <!-- Submission Info -->
    <div class="col-lg-4 mb-4">
      <div class="card">
        <div class="card-header bg-light">
          <i class="bi bi-info-circle me-2"></i>Submission Info
        </div>
        <div class="card-body">
          <table class="table table-sm table-borderless mb-0">
            <tr>
              <td class="text-muted">Client:</td>
              <td><strong>{{invite.client_name}}</strong></td>
            </tr>
            <tr>
              <td class="text-muted">Email:</td>
              <td>{{invite.client_email}}</td>
            </tr>
            {{#if invite.client_company}}
              <tr>
                <td class="text-muted">Company:</td>
                <td>{{invite.client_company}}</td>
              </tr>
            {{/if}}
            <tr>
              <td class="text-muted">Form:</td>
              <td>{{form.title}}</td>
            </tr>
            <tr>
              <td class="text-muted">Status:</td>
              <td>
                {{#eq submission.status "submitted"}}
                  <span class="badge bg-success">Submitted</span>
                {{else}}
                  <span class="badge bg-warning">In Progress</span>
                {{/eq}}
              </td>
            </tr>
            <tr>
              <td class="text-muted">Progress:</td>
              <td>
                <div class="progress mb-1" style="height: 8px;">
                  <div class="progress-bar" style="width: {{submission.progress}}%"></div>
                </div>
                {{submission.progress}}% complete
              </td>
            </tr>
            <tr>
              <td class="text-muted">Started:</td>
              <td>{{submission.started_at}}</td>
            </tr>
            {{#if submission.submitted_at}}
              <tr>
                <td class="text-muted">Submitted:</td>
                <td>{{submission.submitted_at}}</td>
              </tr>
            {{/if}}
          </table>
        </div>
      </div>
    </div>
    
    <!-- Responses -->
    <div class="col-lg-8">
      <div class="card">
        <div class="card-header bg-light d-flex justify-content-between align-items-center">
          <span><i class="bi bi-list-check me-2"></i>Responses</span>
          <span class="badge bg-info">{{responseCount}} fields answered</span>
        </div>
        <div class="card-body">
          {{#if responses}}
            {{#each responseSections}}
              <div class="mb-4">
                <h5 class="border-bottom pb-2 mb-3">{{this.title}}</h5>
                {{#each this.fields}}
                  <div class="mb-3">
                    <label class="form-label text-muted small mb-1">{{this.label}}</label>
                    {{#if this.isArray}}
                      <div>
                        {{#each this.value}}
                          <span class="badge bg-secondary me-1">{{this}}</span>
                        {{/each}}
                      </div>
                    {{else}}
                      <p class="mb-0 p-2 bg-light rounded">{{this.value}}</p>
                    {{/if}}
                  </div>
                {{/each}}
              </div>
            {{/each}}
          {{else}}
            <div class="text-center py-4">
              <i class="bi bi-inbox fs-1 text-muted"></i>
              <p class="text-muted mt-2">No responses yet</p>
            </div>
          {{/if}}
        </div>
      </div>
    </div>
  </div>
</div>
